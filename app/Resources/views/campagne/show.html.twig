{% extends 'base.html.twig' %}

{% block body %}
    <h1>Campagne</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campagne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ campagne.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if campagne.date %}{{ campagne.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ campagne.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('campagne_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('campagne_edit', { 'id': campagne.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}